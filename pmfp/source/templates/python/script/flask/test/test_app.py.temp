import unittest
import json
from $project_name import app


def setUpModule():
    print("setUpModule")


def tearDownModule():
    print("tearUpModule")


class FlaskTest(unittest.TestCase):
    @classmethod
    def setUpClass(cls):
        print("setUpClass")

    @classmethod
    def tearDownClass(cls):
        print("tearDownClass")

    def setUp(self):
        self.app = app.test_client()
        print('set up')

    def tearDown(self):
        print("tear down")

    def test_ping(self):
        rv = self.app.get('/ping')
        self.assertEqual(json.loads(rv.data)["msg"], 'pong')


def ping_suite():
    suite = unittest.TestSuite()
    suite.addTest(FlaskTest("test_ping"))
    return suite


if __name__ == '__main__':
    runner = unittest.TextTestRunner(verbosity=2)
    test_suite = ping_suite()
    runner.run(test_suite)
