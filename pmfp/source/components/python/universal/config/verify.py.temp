from jsonschema import validate
schema = {
    "title": "config",
    "description": "config verify",
    "type": "object",
    "properties": {
        "DEBUG": {
            "description": "debug mode",
            "type": "boolean"
        }
    }
}


def config_schema(instance):
    try:
        validate(instance=instance, schema=schema)
    except:
        raise
    else:
        return instance