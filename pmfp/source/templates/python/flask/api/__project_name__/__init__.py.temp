from flask import Flask
from .api import apis
__VERSION__ = "0.0.1"
app = Flask(__name__)


def init_app(config=None):
    default_settings = {
        'DEBUG': True,
        'HOST': '0.0.0.0',
        'SECRET_KEY': 'some secret words',
        'PORT': 5000,
        'SERVER': "default"
    }
    if config:
        default_settings.update(**config)
    app.config.update(
        **default_settings
    )
    apis.init_app(app)
    return app
