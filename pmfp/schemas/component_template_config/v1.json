{
    "$id": "https://example.com/component_template_config_v0_0_0.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "组件模板配置信息.",
    "type": "object",
    "required": ["SchemaVersion", "ForLanguage", "ForType"],
    "properties": {
        "SchemaVersion": {
            "type": "string"
        },
        "ForLanguage": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["python", "javascript", "golang", "cython", "c"],
                "minLength": 1
            },
            "uniqueItems": true
        },
        "ForType": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["application", "tool", "module", "package"]
            },
            "uniqueItems": true
        },
        "License": {
            "type": "string"
        },
        "Doc": {
            "type": "string",
            "format": "uri"
        },
        "Author": {
            "type": "string"
        },
        "AuthorEmail": {
            "type": "string",
            "format": "email"
        },
        "Description": {
            "type": "string"
        }
    }
}